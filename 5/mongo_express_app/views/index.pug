extends layout

block content
  
  br
  a(href='./authers') See authers
  br
  br
  h3 Books
  
  if books.length
    table.listing-table.table-dark.table-striped
      tr
        th Auther
        th Title
        th Edition
        th Publisher
        th Year
      each book in books
        tr
          td= book.auther
          td= book.title
          td= book.edition
          td= book.publisher
          td= book.year
  else
    p No registrations yet :(

  br
  a(href='./add-book') Add Book
